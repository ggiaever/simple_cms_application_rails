<% @page_title = "All Admin Users" %>

<div class="admin_user index">
  <h2>Admin Users</h2>

  <%= image_tag('plus_sign.png', :size => '11x11', :alt => '+') %>
  <%= link_to("Add New Admin User", new_admin_user_path, :class => 'action new') %>

  <table class="listing" summary="Users list">
    <tr class="header">
      <th>Name</th>
      <th>Username</th>
      <th>Email</th>
    </tr>
    <% @admin_users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td class="actions">
        <%= link_to("Edit", edit_admin_user_path(user), :class => 'action edit') %>
        <%= link_to("Delete", delete_admin_user_path(user), :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
